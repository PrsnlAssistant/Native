{
  "name": "prsnl-assistant",
  "version": "0.1.0",
  "private": true,
  "devDependencies": {
    "@tailwindcss/cli": "^4.0.0",
    "tailwindcss": "^4.0.0"
  },
  "scripts": {
    "build:css": "tailwindcss -i ./assets/input.css -o ./assets/tailwind.css",
    "watch:css": "tailwindcss -i ./assets/input.css -o ./assets/tailwind.css --watch",
    "build:css:minify": "tailwindcss -i ./assets/input.css -o ./assets/tailwind.css --minify"
  }
}
